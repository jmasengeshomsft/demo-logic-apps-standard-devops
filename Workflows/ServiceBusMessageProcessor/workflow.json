{
    "definition": {
        "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
        "actions": {
            "Create_or_update_document_(V3)": {
                "type": "ApiConnection",
                "inputs": {
                    "host": {
                        "connection": {
                            "referenceName": "documentdb_1"
                        }
                    },
                    "method": "post",
                    "body": "@json(base64ToString(triggerBody()?['ContentData']))",
                    "path": "/v2/cosmosdb/@{encodeURIComponent(encodeURIComponent(parameters('cosmosdbAccountName')))}/dbs/@{encodeURIComponent(encodeURIComponent(parameters('cosmosdbDatabaseName')))}/colls/@{encodeURIComponent(encodeURIComponent(parameters('cosmosdbContainerName')))}/docs"
                },
                "runAfter": {
                    "Complete_the_message_in_a_queue": [
                        "Succeeded"
                    ]
                }
            },
            "Complete_the_message_in_a_queue": {
                "type": "ApiConnection",
                "inputs": {
                    "host": {
                        "connection": {
                            "referenceName": "servicebus_2"
                        }
                    },
                    "method": "delete",
                    "path": "/@{encodeURIComponent(encodeURIComponent('logic-apps-demo'))}/messages/complete",
                    "queries": {
                        "lockToken": "@triggerBody()?['LockToken']",
                        "queueType": "Main",
                        "sessionId": ""
                    }
                },
                "runAfter": {}
            }
        },
        "triggers": {
            "When_one_or_more_messages_arrive_in_a_queue_(peek-lock)": {
                "type": "ApiConnection",
                "inputs": {
                    "host": {
                        "connection": {
                            "referenceName": "servicebus_2"
                        }
                    },
                    "method": "get",
                    "path": "/@{encodeURIComponent(encodeURIComponent('logic-apps-demo'))}/messages/batch/head/peek",
                    "queries": {
                        "maxMessageCount": 5,
                        "queueType": "Main",
                        "sessionId": "None"
                    }
                },
                "recurrence": {
                    "frequency": "Second",
                    "interval": 15
                },
                "splitOn": "@triggerBody()"
            }
        },
        "contentVersion": "1.0.0.0",
        "outputs": {}
    },
    "kind": "Stateful"
}